#!/bin/bash

echo_stage() {
    echo -e "${GREEN}    [>] ${LIGHT_GREEN}Stage: '${1}' ${NC}"
}

echo_skipped() { 
    echo -e "${CYAN}    [!] ${LIGHT_CYAN}Stage skipped: '${1}' ${NC}"
}

echo_var() {
    declare ECHOVAR=$1
    echo -e "${GREEN}$1${NC}: '${!1}'"
}

arg() {
    echo -e "  ${BLUE}${1}${NC}${2}${3}"
}


BLACK="\e[30m"
RED="\e[31m"
GREEN="\e[32m"          # "BROWN"
ORANGE="\e[33m"
BLUE="\e[34m"
PURPLE="\e[35m"
CYAN="\e[36m"
GRAY="\e[37m"

LIGHT_BLACK="\e[1;30m"
LIGHT_RED="\e[1;31m"
LIGHT_GREEN="\e[1;32m"
YELLOW="\e[1;33m"       # "LIGHT_BROWN"
LIGHT_BLUE="\e[1;34m"
LIGHT_PURPLE="\e[1;35m"
LIGHT_CYAN="\e[1;36m"
LIGHT_GRAY="\e[1;37m"

NC="\e[0m"



